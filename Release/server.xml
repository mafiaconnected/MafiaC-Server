<!--
	Please see https://wiki.gtaconnected.com/ServerConfiguration for a list of options and information
-->

<server>
	<!-- General Information -->
	<servername>Default Server</servername>
	<game>mafia:one</game>
	<gamemode>Free Roam</gamemode>
	<serverbrowser>true</serverbrowser>
	<maxplayers>120</maxplayers>
	<password></password>
	<minclientversion>1.1.0</minclientversion>
	<duplicatenames>true</duplicatenames>
	<mapname>FREERIDE</mapname>

	<!-- Networking -->
	<port>22000</port>
	<httpport>22000</httpport>
	<httpserver>true</httpserver>
	<syncinterval>30</syncinterval>
	<processinterval>30</processinterval>
	<syncmethod>interval</syncmethod>
	<synclocalentities>true</synclocalentities>

	<!-- Element Streaming -->
	<streamindistance>200</streamindistance>
	<streamoutdistance>250</streamoutdistance>

	<!-- Logging -->
	<logpath>logs</logpath>
	<logtimestamp>[%d/%m/%Y - %X]</logtimestamp>

	<!-- Modules -->
	<!-- https://wiki.gtaconnected.com/Modules -->
	<modules>
		<!--<module src="modules/mod_geoip_x64" />-->
	</modules>

	<!-- Global CVars -->
	<!-- https://wiki.gtaconnected.com/CVars -->
	<cvar name="bridges" value="0" />
	<cvar name="trains" value="0" />
	<cvar name="traffic" value="0" />
	<cvar name="civilians" value="0" />
	<cvar name="scripts" value="0" />
	<cvar name="doors" value="0" />
	<cvar name="dogs" value="0" />
	<cvar name="planes" value="0" />
	<cvar name="fuelstations" value="0" />

	<!-- Rules -->
	<!-- https://wiki.gtaconnected.com/ServerRules -->
	<rule name="Owner" value="Nobody" />
	<rule name="Website" value="https://mafiaconnected.com" />

	<!-- Resources -->
	<!-- https://wiki.gtaconnected.com/Resources -->
	<resources>
		<resource src="freeroam" />
	</resources>
</server>